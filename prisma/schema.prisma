datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  createdAt   DateTime     @default(now())
  submissions Submission[]
}

model Submission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  nombre          String
  apellido        String
  fechaNacimiento DateTime
  genero          String

  curso     String @default("")
  modalidad String @default("")

  tienesIdeaCarrera String  @default("No")
  ideaCarrera       String?

  centroEducativo String?

  // ✅ NUEVO (orientación final)
  identificaCampos      String?
  campoIdentificado     String?
  ideaCarreraFinal      String?
  ideaCarreraTextoFinal String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  assessments Assessment[]

  @@index([createdAt])
  @@index([genero])
  @@index([centroEducativo])
}

model Assessment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  email       String
  answersJson Json
  scoresJson  Json

  @@index([email])
  @@index([submissionId])
}
